<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexPage</servlet-name>
        <servlet-class>controllers.IndexPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <servlet-class>controllers.RegisterPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controllers.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>controllers.CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInPage</servlet-name>
        <servlet-class>controllers.SignInPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controllers.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieOverview</servlet-name>
        <servlet-class>controllers.MovieOverview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reviewPage</servlet-name>
        <servlet-class>controllers.reviewPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>photosPage</servlet-name>
        <servlet-class>controllers.photosPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountPage</servlet-name>
        <servlet-class>controllers.AccountPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>controllers.Update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPage</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/create/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInPage</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieOverview</servlet-name>
        <url-pattern>/movie/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reviewPage</servlet-name>
        <url-pattern>/movie/reviews/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>photosPage</servlet-name>
        <url-pattern>/movie/photos/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountPage</servlet-name>
        <url-pattern>/myAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>JSP/redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
